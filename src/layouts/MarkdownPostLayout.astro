---
import BaseLayout from "./BaseLayout.astro";
import TagItem from "../components/TagItem.astro";
import { fade } from "astro:transitions";

const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
   <p>
      <strong>Published on:</strong>
      <em>{frontmatter.pubDate.slice(0, 10)}</em>
   </p>
   <p><strong>Written by:</strong> {frontmatter.author}</p>
   <div style='padding: 1em 0;'>
      <strong>Tags:</strong>
      {frontmatter.tags.map((tag: any) => <TagItem tag={tag} />)}
   </div>
   <p transition:animate={fade({ duration: '1s' })}>
      <em>{frontmatter.description}</em>
   </p>
   <img src={frontmatter.image.url} width='300' alt={frontmatter.image.alt} />
   <slot />
</BaseLayout>
